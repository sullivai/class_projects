<form id="updateEntry" action="/">
	<fieldset>
		<legend>Update entry</legend>
		<p><label for="name">Exercise name:</label>
			<input type="text" name="name" id="name" value="{{name}}"></p>
		<p><label for="reps">Reps</label>
			<input type="number" name="reps" id="reps" value="{{reps}}">
		<label for="weight">Weight</label>
			<input type="number" step="0.01" name="weight" id="weight" value="{{weight}}"></p>
		<p><label for="date">Date done:</label>
			<input type="date" name="date" id="date" value="{{date}}">
		<label for="lbs">Unit</label>
			{{#if lbs}}
				<input type="radio" name="lbs" value="0">kg
				<input type="radio" name="lbs" value="1" checked>lb			
			{{else}}
				<input type="radio" name="lbs" value="0" checked>kg
				<input type="radio" name="lbs" value="1">lb	
			{{/if}}
		<input type="hidden" name="id" id="uid" value="{{id}}">
		<input type="submit" value="Update Entry" id="updateIt"></p>
	</fieldset>
</form>